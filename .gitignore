# See https://help.github.com/articles/ignoring-files for more about ignoring files.
#
# Temporary files generated by your text editor or operating system
# belong in git's global ignore instead:
# `$XDG_CONFIG_HOME/git/ignore` or `~/.config/git/ignore`

/.yardoc
/_yardoc/
/doc/
/pkg/
/spec/reports/
.DS_Store

# IDE and Editor specific
/.idea
/.cursor
/.ruby-lsp
/.vscode

# Ignore bundler config.
/.bundle

# MCP temp files
/.playwright-mcp

# Ignore node_modules
/node_modules

# Simple-cov
/coverage/

# Ignore pid files, but keep the directory.
/tmp/pids/*
!/tmp/pids/
!/tmp/pids/.keep

# Ignore socket files, but keep the directory.
/tmp/sockets/*
!/tmp/sockets/
!/tmp/sockets/.keep

# Ignore all environment files.
/.env*
!/.env*.erb
!/.env*.sample

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore storage (uploaded files in development and any SQLite databases).
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/
!/tmp/storage/.keep

# Ignore SQLite database files.
/db/*.sqlite3
/db/*.sqlite3-*

# Ignore all default key files.
/config/master.key
/config/credentials/*.key
/config/credentials.yml.enc
/config/credentials/*.yml.enc

# Ignore local settings files
/config/settings.local.yml
/config/settings/*.local.yml
/config/environments/*.local.yml

# Ignore environment specified config files
/config/deploy.yml
/compose.yaml

# Assets pipeline
/app/assets/builds/*
!/app/assets/builds/.keep
/public/assets

# Gem
/lib/tavern_kit/.bundle/
/lib/tavern_kit/.yardoc
/lib/tavern_kit/_yardoc/
/lib/tavern_kit/coverage/
/lib/tavern_kit/doc/
/lib/tavern_kit/pkg/
/lib/tavern_kit/spec/reports/
/lib/tavern_kit/tmp/
/lib/tavern_kit/*.gem

/lib/easy_talk/.bundle/
/lib/easy_talk/.yardoc
/lib/easy_talk/_yardoc/
/lib/easy_talk/coverage/
/lib/easy_talk/doc/
/lib/easy_talk/pkg/
/lib/easy_talk/spec/reports/
/lib/easy_talk/tmp/
/lib/easy_talk/*.gem

# Local resources
/resources

# Ignore key files for decrypting credentials and more.
/config/*.key
